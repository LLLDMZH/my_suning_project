<generatorConfiguration>
										<!-- 生成简单版本的CRUD
											如果改成MyBatis3 豪华套餐；
										 -->
  <context id="DB2Tables" targetRuntime="MyBatis3">
  	<!-- jdbcConnection:指定如何连接到目标数据库 -->
    <jdbcConnection driverClass="com.mysql.jdbc.Driver"
        connectionURL="jdbc:mysql:///suning?allowMultiQueries=true"
        userId="root"
        password="123456">
    </jdbcConnection>

	
    <javaTypeResolver >
      <property name="forceBigDecimals" value="false" />
    </javaTypeResolver>

	<!-- 指定 javaBean生成策略
		targetPackage:目标包名
		targetProject:目标工程
	 -->
    <javaModelGenerator 
    	targetPackage="com.bjpowernode.beans" 
    	targetProject=".\src">
      <property name="enableSubPackages" value="true" />
      <property name="trimStrings" value="true" />
    </javaModelGenerator>

	<!-- sqlMapGenerator :sql映射生成定义 -->
    <sqlMapGenerator targetPackage="com.bjpowernode.dao"  
    				targetProject=".\config">
      <property name="enableSubPackages" value="true" />
    </sqlMapGenerator>

	<!-- 指定Mapper接口所在的位置 -->
    <javaClientGenerator type="XMLMAPPER" targetPackage="com.bjpowernode.dao"  targetProject=".\src">
      <property name="enableSubPackages" value="true" />
    </javaClientGenerator>

	<!-- 指定要逆向分析哪些表 ,根据表-->
	<table tableName="student" domainObjectName="Student"></table>
  </context>
</generatorConfiguration>